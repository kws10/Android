<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#6799FF"
    tools:context=".fragment_genre">


    <TextView
        android:id="@+id/seektext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jalnan"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/spicyquestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jalnan"
            android:textSize="30dp"
            android:layout_marginBottom="50dp"
            android:text="어떤 장르의 음식을  좋아하세요?"
            android:textAlignment="center"/>

        <RadioGroup
            android:id="@+id/genre_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <RadioButton
                android:id="@+id/kor_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jalnan"
                android:textSize="20dp"
                android:layout_margin="10dp"
                android:text="한식" />

            <RadioButton
                android:id="@+id/chn_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jalnan"
                android:textSize="20dp"
                android:layout_margin="10dp"
                android:text="중식" />

            <RadioButton
                android:id="@+id/usa_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jalnan"
                android:textSize="20dp"
                android:layout_margin="10dp"
                android:text="양식" />

            <RadioButton
                android:id="@+id/jpn_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jalnan"
                android:textSize="20dp"
                android:layout_margin="10dp"
                android:text="일식" />

            <RadioButton
                android:id="@+id/snack_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jalnan"
                android:textSize="20dp"
                android:layout_margin="10dp"
                android:text="분식" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>

    </LinearLayout>

</LinearLayout>